{
  "name": "findinmap-backend",
  "version": "1.0.0",
  "description": "MapVest backend API with Express, TypeScript, PostgreSQL and PostGIS",
  "main": "dist/main/server.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/main/server.ts",
    "start": "node dist/main/server.js",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "setup": "pnpm docker:up && sleep 5 && pnpm db:push",
    "deploy": "pnpm build && drizzle-kit push && pnpm start"
  },
  "keywords": [
    "map",
    "backend",
    "express",
    "postgis",
    "postgresql",
    "typescript",
    "api",
    "node.js"
  ],
  "author": "Paolo Dell'Aguzzo",
  "license": "CC-BY-NC-SA-4.0",
  "packageManager": "pnpm@10.13.1",
  "dependencies": {
    "@types/pg": "^8.15.5",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.44.5",
    "express": "^5.1.0",
    "express-openapi-validator": "^5.3.7",
    "express-winston": "^4.2.0",
    "helmet": "^8.0.0",
    "postgres": "^3.4.7",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.0.3",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/express-winston": "^4.0.2",
    "@types/node": "^22.10.1",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^10.0.0",
    "@types/winston": "^2.4.4",
    "drizzle-kit": "^0.31.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
